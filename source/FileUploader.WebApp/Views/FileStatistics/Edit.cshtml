@model FileUploader.WebApp.Models.FileStatisticsEntity

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "FileStatistics", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>FileStatisticsEntity</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.ID)

        <dl class="dl-horizontal">
            <dt>
                @Html.Label("Current File")
            </dt>
            <dd>
                @Html.DisplayFor(x => x.Filename)
            </dd>
            <dt>
                @Html.Label("New File")
            </dt>
            <dd>
                <input type="file" id="fileContent" name="upload"/>
            </dd>
        </dl>

        <div class="form-group">

            <div class="input-validation-error">
                @Html.ValidationMessage("FileUpload")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
